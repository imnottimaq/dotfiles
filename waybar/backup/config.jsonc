{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 39,
    "modules-left": ["clock","cpu","memory"],
    "modules-center": ["hyprland/window"],
    "modules-right": ["privacy","network","hyprland/language","group/volume","pulseaudio#microphone","tray"],
    "hyprland/window": {
        "format": "{}",
	"icon": true,
	"icon-size": 18,
	"rewrite":{
	    "(.*) - Google Chrome": "Google Chrome"
	}
    },
    
    "hyprland/language":{
	"format": "{}",
	"format-en": "ðŸ‡ºðŸ‡¸ US",
	"format-ru": "ðŸ‡·ðŸ‡º RU",
	"format-uk": "ðŸ‡ºðŸ‡¦ UA"
    },

    "tray": {
        "icon-size": 24,
        "spacing": 10
    },

    "clock": {
        "format": "{:%a %D, %R}",
	"timezone": "Europe/Kyiv"
    },

"pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "ï„° {volume}%",
        "format-source-muted": "ï„± Muted",
        "on-click": "pavucontrol",
        "on-scroll-up": "pamixer --default-source -i 5",
        "on-scroll-down": "pamixer --default-source -d 5",
        "scroll-step": 5
    },
"pulseaudio": {
        "format": "{icon} {volume}%",
        "tooltip": false,
        "format-muted": "ï€¦ Muted",
        "on-click": "pamixer -t",
        "format-icons": {
            "headphone": "ï€¥",
            "hands-free": "ï€¥",
            "headset": "ï€¥",
            "phone": "ï‚•",
            "portable": "ï‚•",
            "car": "ï†¹",
            "default": ["ï€¦", "ï€§", "ï€¨"]
        }
},
"group/volume":{
	"orientation": "horizontal",
	"modules":["pulseaudio","pulseaudio/slider"],
	"drawer": {
	    "transition-duration": 250,
	}
},
"network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "ï‡«  {signalStrength}%",
        "format-ethernet": "ï‡« ",
        "tooltip-format": "{essid} - {ifname} via {gwaddr}",
        "format-linked": "{ifname} (No IP)",
        "format-disconnected": "Disconnected âš ",
        "format-alt": "{ifname}:{essid} {ipaddr}/{cidr}"
    },
"cpu": {
	"interval": 1,
        "format": "CPU: {usage}%"
    },
"memory": {
	"interval": 1,
	"format": "RAM: {}%"
    },
"privacy": {
	"icon-size": 18,
	"icon-spacing": 4,
	"modules": [
		{
			"type": "screenshare",
			"tooltip": true,
			"tooltip-icon-size": 24
		},
		{
			"type": "audio-in",
			"tooltip": true,
			"tooltip-icon-size": 24
		}
	 ]
    },
"custom/brightness": {
    "format": "{icon} {percentage}%",
    "format-icons": ["\uDB80\uDCDE", "\uDB80\uDCDF", "\uDB80\uDCE0"],
    "return-type": "json",
    "exec": "ddcutil --bus 5 getvcp 10 | grep -oP 'current.*?=\\s*\\K[0-9]+' | { read x; echo '{\"percentage\":'${x}'}'; }",
    "on-scroll-up": "ddcutil --noverify --bus 5 setvcp 10 + 10",
    "on-scroll-down": "ddcutil --noverify --bus 5 setvcp 10 - 10",
    "on-click": "ddcutil --noverify --bus 5 setvcp 10 0",
    "on-click-right": "ddcutil --noverify --bus 5 setvcp 10 100",
    "interval": 1,
    "tooltip": false,
},
"mpris": {
    "format": "{title} - {artist} [{position} - {length}]",
    "title-len": 25,
    "artist-len": 20,
    "interval": 1,
}
}


